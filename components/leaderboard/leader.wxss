.leader-hover-mask {
  position: fixed;
  z-index: 100;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(50, 51, 53, 1);
  height: 100%;
  width: 100%;
}

.leader-main {
  position:fixed;
  top:0;
  right:0;
  left:0;
  bottom:0;
  height: 100%;
  width: 100%;
  margin: 0 auto;
  z-index:999;
}

.leader-title{
  color:rgb(255,153,0);
  font-size:56rpx;
  font-weight: 700;
  text-align: center;
  margin-top:20rpx;
}

.leader-score {
  display:block;
  height:240rpx;
}

.leader-score view {
  color: white;
}

.leader-person-score{
    display: table;
    margin: 0 auto;
    margin-top:20rpx;
    width: 560rpx;
    height: 210rpx;
    background: inherit;
    background-color: rgba(0, 0, 0, 1);
    box-sizing: border-box;
    border-width: 2rpx;
    border-style: solid;
    border-color: rgba(121, 121, 121, 1);
    border-radius: 10rpx;
    -moz-box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 153, 255, 0.2) inset;
    -webkit-box-shadow: 0rpx 0rpx 100rpx 0px rgba(0, 153, 255, 0.2) inset;
    box-shadow: 0px 0px 100rpx 0px rgba(0, 153, 255, 0.2) inset;
    color: white;
    text-align: center;
}

.leader-person-score view {
  margin-top:0;
}

.person-score-title{
  font-size:24rpx;
  font-weight: 400;
  margin-top:20rpx;
}

.person-score-percent{
  margin-top:20rpx;
  font-size:24rpx;
  color:#FF9900;
}

.person-score{
  font-size:96rpx;
  font-weight: 700;
}

.person-score.font-60{
  font-size:60rpx;
  font-weight: 700;
}

.person-score.font-50{
  font-size:50rpx;
  font-weight: 700;
}

.person-score.font-80{
  font-size:80rpx;
  font-weight: 700;
}

.leader-high-score{
  display: table;
  margin: 0 auto;
  margin-top: 20rpx;
  text-align: center;
}

.person-high-score {
  height:112rpx;
  width: 320rpx;
  background: inherit;
  background-color: rgba(0, 0, 0, 1);
  box-sizing: border-box;
  border-width: 2rpx;
  border-style: solid;
  border-color: rgba(121, 121, 121, 1);
  border-radius: 10rpx;
  -moz-box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 153, 255, 0.2) inset;
  -webkit-box-shadow: 0rpx 0rpx 100rpx 0px rgba(0, 153, 255, 0.2) inset;
  box-shadow: 0px 0px 100rpx 0px rgba(0, 153, 255, 0.2) inset;
  color: white;
  text-align: center;
  line-height: 112rpx;
}

.leader-high-score .person-score-title{
  width: 320rpx;
  text-align: center;
}

.game-restart {
  display: table;
  margin: 0 auto;
  margin-top: 50rpx;
  text-align: center;
  width: 442rpx;
  height: 100rpx;
  background: inherit;
  background-color: rgba(0, 153, 255, 1);
  border: none;
  border-radius: 30rpx;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
  line-height: 100rpx;
  font-weight: 400;
  font-style: normal;
  font-size: 18px;
}

.game-recycle{
   width: 32rpx;
   height: 32rpx;
   margin-right:20rpx;
}

.game-more {
  display:inline-flex;
  width:320rpx;
  height:62rpx;
  line-height:62rpx;
  margin-left:220rpx;
  margin-top:20rpx;
}

.game-box {
  background: inherit;
  background-color: rgba(255, 255, 255, 0);
  box-sizing: border-box;
  border-width: 1px;
  border-style: solid;
  border-color: rgba(255, 255, 255, 1);
  border-radius: 0px;
  box-shadow: none;
  font-family: 'PingFangSC-Regular', 'PingFang SC';
  font-weight: 400;
  font-style: normal;
  font-size: 28rpx;
  color: #FFFFFF;
  margin-right:10rpx;
  width:150rpx;
  text-align:center;
}

.game-box:hover {
  border:4rpx solid #ffffff;
  -moz-box-shadow:0 0 4rpx 4rpx #ffffff;               
	-webkit-box-shadow:0 0 4rpx 4rpx #ffffff;
	box-shadow:0 0 4rpx 4rpx #ffffff;
}

.game-box button {
  padding-left:0px;
  padding-right:0px;
  box-sizing:border-box;
  font-size:28rpx;
  text-align:center;
  text-decoration:none;
  border-radius:0px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#FFFFFF;
  background-color:rgba(255, 255, 255, 0);
  line-height:62rpx;
}

.game-qrcode{
  display: table;
  margin: 0 auto;
  margin-top: 20rpx;
  text-align: center;
  height:160rpx;
  width: 160rpx;
}

.game-qrcode image{
  height:160rpx;
  width: 160rpx;
}